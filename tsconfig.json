{
    "compilerOptions": {
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": false,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": ["es2017", "dom"],
        "baseUrl": ".",
        "paths": {
            "*": [
            "./node_modules/tns-core-modules/*",
            "./node_modules/*"
            ]
        }
    },
    "files": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "bundles"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}
